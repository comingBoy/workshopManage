<!--pages/modifyWorkshop/modifyWorkshop.wxml-->
<view class='container'>
  <view class='MesBox' bindtap='changeWorkshop'>{{workshopInfo.workshopName}}    </view>
  <view class='MesBox'>
    <text class='label'>负责人:</text>
      <picker class='picker' bindchange="chooseopenId" value="{{index}}" range-key="name" range="{{staffList}}">
        <view class="picker">{{staffList[staffIndex].name}}</view>
      </picker>
  </view> 
  <text style='font-size:30rpx;margin:10rpx;font-weight:600;'>检查点列表</text>
    <view class='MesBox0' wx:for="{{checkpointInfo}}" id='{{index}}' bindtap='changeCheckpoint'>
      {{item.name}}
    </view>
</view>

<view wx:if='{{changeFlag0 == false}}' class='changeInfo'>
  <text class='changeTitle'>{{changeWhat[index0]}}</text>
  <view class='changeCtx'>
    <input class='changeInput' bindinput="input0" value='{{changeCtx}}' placeholder='{{workshopInfo.workshopName}}'></input>
    <button bindtap='changeSave0' class='changeSave'>修改</button>
    <button bindtap='delWorkshop' class='delWorkshop'>删除</button>
  </view>
</view>

<view wx:if='{{changeFlag == false}}' class='changeInfo'>
  <text class='changeTitle'>{{changeWhat[index0]}}</text>
  <input class='changeInput' bindinput="input" placeholder='{{checkpointInfo[index].name}}'></input>
  <text class='changeTitle'>更改每月检查次数</text>
  <input class='changeInput' bindinput="input1" value='{{changeCtx}}' placeholder='{{checkpointInfo[index].times}}'></input>
  <button bindtap='changeSave' class='changeSave'>修改</button>
  <button bindtap='delCheckpoint' class='delCheckpoint'>删除</button>
</view>

<view hidden='{{newFlag0}}' class='changeInfo'>
  <text class='changeTitle'>新建检查点</text>
  <view class='changeCtx'>
    <input class='changeInput' bindinput="input" value='{{changeCtx}}' placeholder='请输入检查点名称'></input>
    <input class='changeInput' bindinput='input1'  placeholder='请输入检查次数'></input>
    <button  bindtap='newCheckpoint0' style='background-color: white;'>确认</button>
  </view>
</view>


<button hidden='{{newFlag}}' bindtap='newCheckpoint' class='newCheckpoint'>新建检查点</button>
<button bindtap='goBack' class='return'>返回</button>
