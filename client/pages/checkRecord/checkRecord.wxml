<!--pages/checkRecord/checkRecprd.wxml-->

<view class='container'>
  <view class='frame'>
    <!--检查点框架-->
    <view class='checkpointContainer'>
      <view class='tip'>tip:点击查看检查详情</view>
      <view class='checkpointList'>
        <view wx:for='{{inspectListByMyself}}' class='checkpointInfo'>
          <view class='checkpointName'>
            {{item.checkpointName}}
          </view>
          <view class='checkpointStatus'>
            {{errorList[item.error]}}
          </view>
          <button class='toCheck' bindtap='toCheck' id='{{index}}'>查看详情</button>
        </view>
      </view>
    </view>

    <!--检查界面-->
    <view class='fillCheckInfo' hidden='{{ifShow}}'>
      <view class='checkpointName'>
        {{inspectInfo.checkpointName}}
      </view>
      <view class='error'>
        <view>
        {{errorList[inspectInfo.error]}}
        </view>
      </view>
      <view class='checkBox'> 隐患图片</view>
      <view wx:if='{{inspectInfo.photo == ""}}'>无隐患图片</view>
      <image wx:else src="{{photo}}" class='cameraImage' mode='aspectFill'></image>
      <view class='checkBox'> 故障描述</view>
       <view wx:if='{{inspectInfo.description == ""}}'>无故障描述</view>
      <textarea wx:else class="textArea"  value="{{inspectInfo.description}}" disabled='true'/>
    </view>

    <!--提交检查-->
    <view hidden='{{!ifSubmit}}' class='ifSubmit'>
      <view wx:if='{{ifCompleteFill}}' class='submit' bindtap='submit'>
        提交检查记录
      </view>
      <view wx:else class='noSubmit' bindtap='noSubmit'>
        提交检查记录
      </view>  
    </view>
    
  </view>
</view>

